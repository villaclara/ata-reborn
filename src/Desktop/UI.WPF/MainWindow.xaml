<Window x:Class="UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.WPF"
        xmlns:components="clr-namespace:UI.WPF.Components"
        xmlns:viewmodels="clr-namespace:UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900" Loaded="Window_Loaded"
        >
    <Grid Background="#ececec">

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="420"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Top toolbar -->
        <Border Grid.Row="0"
                BorderBrush="Black"
                BorderThickness="2">

            <components:Toolbar Margin="50 10 50 10"/>

        </Border>

        <!-- Tracked Apps Section. ScrollViewer allows to be displayed scrollbar -->
        <ScrollViewer Grid.Row="1">
            
            <!-- Applications secion -->
            <!--<WrapPanel x:Name="WrapPanelMain" Orientation="Horizontal">

                
                --><!--<components:TrackedAppItem MinWidth="250" MinHeight="420" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>-->
                <!--<components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>--><!--
            </WrapPanel>-->

            <ItemsControl ItemsSource="{Binding AppItems}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel>
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:TrackedAppItemViewModel}" >
                        <components:TrackedAppItem/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>  
  
        
    </Grid>

</Window>

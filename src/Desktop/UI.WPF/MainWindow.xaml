<Window x:Class="UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.WPF"
        xmlns:components="clr-namespace:UI.WPF.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900"
        >
    <Grid Background="#ececec">

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="420"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>


        <!-- Tracked Apps Section. ScrollViewer allows to be displayed scrollbar -->
        <ScrollViewer Grid.Row="1">
            
            <!-- Applications secion -->
            <WrapPanel Orientation="Horizontal">

                <components:TrackedAppItem MinWidth="250" MinHeight="420" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <!--<components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>
                <components:TrackedAppItem MinWidth="250" Margin="10 0 0 0"/>-->
            </WrapPanel>
        </ScrollViewer>  
  
        
        <!-- Bottom toolbar -->
        <Border Grid.Row="2"
                BorderBrush="Black"
                BorderThickness="2">
            <StackPanel Orientation="Horizontal">
                
            </StackPanel>
        </Border>
    </Grid>

</Window>

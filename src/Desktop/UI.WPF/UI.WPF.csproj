<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.18362.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyName>ATA Reborn</AssemblyName>
    <ApplicationIcon>Resources\Images\atav2.ico</ApplicationIcon>
    <UseWindowsForms>True</UseWindowsForms>
    <Version>1.5.0</Version>
    <AssemblyVersion>1.5.*</AssemblyVersion>
    <Deterministic>false</Deterministic>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Changelog.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="gong-wpf-dragdrop" Version="4.0.0" />
    <PackageReference Include="LiveCharts.Wpf" Version="0.9.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Application\Application.csproj" />
    <ProjectReference Include="..\..\Shared\Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Changelog.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Resource Include="Resources\Images\atav2.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Images\atav2png.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Images\close_black.png" />
    <Resource Include="Resources\Images\dashboard_blackyellow.png" />
    <Resource Include="Resources\Images\home_black.png" />
    <Resource Include="Resources\Images\home_white.png" />
    <Resource Include="Resources\Images\minimize_black.png" />
    <Resource Include="Resources\Images\moon_black.png" />
    <Resource Include="Resources\Images\moon_white.png" />
    <Resource Include="Resources\Images\more.png" />
    <Resource Include="Resources\Images\plus_black.png" />
    <Resource Include="Resources\Images\plus_white.png" />
    <Resource Include="Resources\Images\refresh_black.png" />
    <Resource Include="Resources\Images\refresh_white.png" />
    <Resource Include="Resources\Images\remove_black.png" />
    <Resource Include="Resources\Images\remove_white.png" />
    <Resource Include="Resources\Images\settings_black.png" />
    <Resource Include="Resources\Images\settings_white.png" />
    <Resource Include="Resources\Images\sun_black.png" />
    <Resource Include="Resources\Images\sun_white.png" />
  </ItemGroup>

</Project>
